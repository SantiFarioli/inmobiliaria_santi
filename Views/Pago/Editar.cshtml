@model inmobiliaria_santi.Models.Pago

@{
    ViewData["Title"] = "Editar Pago";
}

<h2 class="text-center my-4">‚úèÔ∏è Editar Pago</h2>

<div class="card mx-auto shadow" style="max-width: 600px;">
    <div class="card-body">
        <form asp-action="Editar" method="post">
            <!-- Ocultos requeridos -->
            @Html.HiddenFor(m => m.idPago)
            @Html.HiddenFor(m => m.idContrato)
            @Html.HiddenFor(m => m.nroPago)
            @Html.HiddenFor(m => m.fechaPago)
            @Html.HiddenFor(m => m.importe)
            @Html.HiddenFor(m => m.estado)
            @Html.HiddenFor(m => m.usuarioCreacion)
            @Html.HiddenFor(m => m.usuarioAnulacion)
            @Html.HiddenFor(m => m.usuarioEliminacion)

            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

            <!-- Contrato (solo visible el resumen) -->
            <div class="mb-3">
                <label class="form-label"> Contrato</label>
                <input class="form-control" value="@Model.ContratoResumen" readonly />
            </div>

            <!-- N√∫mero de Pago -->
            <div class="mb-3">
                <label class="form-label"> N√∫mero de Pago</label>
                <input class="form-control" value="@Model.nroPago" readonly />
            </div>

            <!-- Fecha -->
            <div class="mb-3">
                <label class="form-label"> Fecha</label>
                <input class="form-control" value="@Model.fechaPago.ToString("yyyy-MM-dd")" readonly />
            </div>

            <!-- Importe -->
            <div class="mb-3">
                <label class="form-label"> Importe</label>
                <input class="form-control" value="@Model.importe.ToString("N2")" readonly />
            </div>

            <!-- Detalle -->
            <div class="mb-3">
                <label asp-for="detalle" class="form-label"> Detalle</label>
                <textarea asp-for="detalle" class="form-control" rows="3" placeholder="Ej: Ajuste o nota adicional..."></textarea>
                <span asp-validation-for="detalle" class="text-danger"></span>
            </div>

            <!-- Botones -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary me-2">
                    üíæ Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    ‚¨ÖÔ∏è Volver
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
