@model IEnumerable<inmobiliaria_santi.Models.Pago>
@{
    ViewData["Title"] = "Pagos registrados";
}

<h2 class="text-center mb-4">Pagos registrados</h2>

<div class="text-center mb-3">
    <a asp-action="Crear" class="btn btn-success">Registrar nuevo pago</a>
</div>

<table class="table table-bordered table-hover table-striped table-sm text-center">
    <thead class="table-primary">
        <tr>
            <th>Contrato</th>
            <th>Fecha</th>
            <th>Importe</th>
            <th>Nro Pago</th>
            <th>Detalle</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.idContrato</td>
                    <td>@item.fechaPago.ToShortDateString()</td>
                    <td>@item.importe.ToString("C")</td>
                    <td>@item.nroPago</td>
                    <td>@item.detalle</td>
                    <td>
                        <a asp-action="Detalle" asp-route-id="@item.idPago" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i>üëÅÔ∏è Detalle
                        </a>
                        <a asp-action="Editar" asp-route-id="@item.idPago" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i>‚úèÔ∏è Editar
                        </a>
                        <a asp-action="Eliminar" asp-route-id="@item.idPago" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>üóëÔ∏è Eliminar
                        </a>
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="7">No hay pagos registrados.</td>
            </tr>
        }
    </tbody>
</table>
