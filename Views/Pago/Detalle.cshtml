@model inmobiliaria_santi.Models.Pago

@{
    ViewData["Title"] = "Detalle de Pago";
}

<h2 class="text-center mt-4 mb-4">Detalle del Pago</h2>

<div class="card mx-auto shadow" style="max-width: 500px;">
    <div class="card-body">
        <h5 class="card-title">Pago NÂº @Model.nroPago</h5>
        
        <p><strong>Contrato:</strong> @Model.ContratoResumen</p>
        <p><strong>Fecha de Pago:</strong> @Model.fechaPago.ToString("dd/MM/yyyy")</p>
        <p><strong>Importe:</strong> @Model.importe.ToString("C")</p>
        <p><strong>Detalle:</strong> @Model.detalle</p>
        <p><strong>Registrado por:</strong> @Model.usuarioCreacion</p>

        @if (!string.IsNullOrEmpty(Model.usuarioEliminacion))
        {
            <p><strong>Eliminado por:</strong> @Model.usuarioEliminacion</p>
        }

        <a asp-action="Index" class="btn btn-secondary mt-3">Volver al listado</a>
    </div>
</div>
