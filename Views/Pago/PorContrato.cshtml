                                    <button type="button" class="btn btn-danger btn-sm" onclick="confirmarEliminacion(@pago.idPago)">ğŸ—‘ï¸</button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

