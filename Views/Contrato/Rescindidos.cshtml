@model IEnumerable<inmobiliaria_santi.Models.Contrato>

@{
    ViewData["Title"] = "Contratos Rescindidos";
}

<h2 class="text-center my-4">📉 Contratos Rescindidos</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No hay contratos rescindidos actualmente.
    </div>
}
else
{
    <div class="table-responsive mx-auto" style="max-width: 1200px;">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-warning text-center align-middle">
                <tr>
                    <th>👤 Inquilino</th>
                    <th>🏠 Inmueble</th>
                    <th>👥 Propietario</th>
                    <th>📅 Inicio</th>
                    <th>📅 Fin</th>
                    <th>📆 Rescisión</th>
                    <th>💰 Multa</th>
                    <th>📌 % Multa</th>
                    <th>⚙️ Acciones</th>
                </tr>
            </thead>
            <tbody class="align-middle text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.InquilinoNombre @item.InquilinoApellido</td>
                        <td>@item.InmuebleDireccion</td>
                        <td>@item.PropietarioNombre @item.PropietarioApellido</td>
                        <td>@item.fechaInicio.ToString("dd/MM/yyyy")</td>
                        <td>@item.fechaFin.ToString("dd/MM/yyyy")</td>
                        <td class="text-danger fw-bold">@item.fechaTerminacionTemprana?.ToString("dd/MM/yyyy")</td>
                        <td class="text-danger">@item.multaTerminacionTemprana?.ToString("C")</td>
                        <td>@item.porcentajeMulta?.ToString("P0")</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="Detalle" asp-route-id="@item.idContrato">👁️ Ver</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">🔙 Volver al Listado</a>
</div>
