@model IEnumerable<inmobiliaria_santi.Models.Contrato>

@{
    ViewData["Title"] = "Listado de Contratos";
    var esAdmin = User.IsInRole("Administrador");
}

<div class="text-center mb-4">
    <h1>Listado de Contratos</h1>
    @if (esAdmin)
    {
        <a class="btn btn-success mt-3" asp-action="Crear">📄 Crear Contrato</a>
    }
</div>

<div class="d-flex justify-content-center mb-4">
    <form method="get" class="w-100" style="max-width: 700px;">
        <div class="mb-2">
            <input type="text" name="q" placeholder="Buscar por inquilino, propietario o dirección..."
                   class="form-control text-center" value="@Context.Request.Query["q"]" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">🔍 Buscar</button>
        </div>
    </form>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover shadow-sm align-middle text-center">
            <thead class="table-primary">
                <tr>
                    <th>#</th>
                    <th>👤 Inquilino</th>
                    <th>🏠 Inmueble</th>
                    <th>👥 Propietario</th>
                    <th>📅 Inicio</th>
                    <th>📅 Fin</th>
                    <th>💵 Renta</th>
                    <th>📌 Estado</th>
                    <th>⚙️ Acciones</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.idContrato</td>
                    <td>@item.InquilinoNombre @item.InquilinoApellido</td>
                    <td>@item.InmuebleDireccion</td>
                    <td>@item.PropietarioNombre @item.PropietarioApellido</td>
                    <td>@item.fechaInicio.ToString("dd/MM/yyyy")</td>
                    <td>@item.fechaFin.ToString("dd/MM/yyyy")</td>
                    <td>$ @item.montoRenta?.ToString("N2")</td>
                    <td>
                        @if (!item.estado)
                        {
                            <span class="badge bg-danger">Rescindido</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-info btn-sm" asp-action="Detalle" asp-route-id="@item.idContrato" title="Ver detalle">👁️</a>
                            @if (esAdmin)
                            {
                                <a class="btn btn-warning btn-sm" asp-action="Editar" asp-route-id="@item.idContrato" title="Editar">✏️</a>
                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmarEliminacion(@item.idContrato)" title="Eliminar">🗑️</button>
                            }
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        No hay contratos registrados aún.
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmarEliminacion(id) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: "Esta acción eliminará el contrato de la lista.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Contrato/EliminarConfirmado/' + id;
                }
            });
        }
    </script>
}
