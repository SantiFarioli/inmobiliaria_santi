@model IEnumerable<inmobiliaria_santi.Models.Contrato>

@{
    ViewData["Title"] = "Listado de Contratos";
}

<div class="text-center mb-4">
    <h1>Listado de Contratos</h1>
    <a class="btn btn-success mt-3" asp-action="Crear">Crear Contrato</a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>@nameof(inmobiliaria_santi.Models.Contrato.idContrato)</th>
                <th>@nameof(inmobiliaria_santi.Models.Contrato.InquilinoNombre)</th> <!-- Nombre completo del inquilino -->
                <th>@nameof(inmobiliaria_santi.Models.Contrato.InmuebleDireccion)</th> <!-- Direcci√≥n del inmueble -->
                <th>@nameof(inmobiliaria_santi.Models.Contrato.PropietarioNombre)</th> <!-- Nombre completo del propietario -->
                <th>@nameof(inmobiliaria_santi.Models.Contrato.fechaInicio)</th>
                <th>@nameof(inmobiliaria_santi.Models.Contrato.fechaFin)</th>
                <th>@nameof(inmobiliaria_santi.Models.Contrato.montoRenta)</th>
                <th>Contrato Rescindido</th> <!-- Nueva columna -->
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.idContrato</td>
                <td>@item.InquilinoNombre @item.InquilinoApellido</td> <!-- Nombre completo del inquilino -->
                <td>@item.InmuebleDireccion</td> <!-- Direcci√≥n del inmueble -->
                <td>@item.PropietarioNombre @item.PropietarioApellido</td> <!-- Nombre completo del propietario -->
                <td>@item.fechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@item.fechaFin.ToString("dd/MM/yyyy")</td>
                <td>@item.montoRenta.ToString("C")</td> <!-- Mostrar en formato de moneda -->
                <td>
                    @if (item.estado == false)  
                    {
                        <span class="badge bg-danger">Rescindido</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                </td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Detalle" asp-route-id="@item.idContrato">üëÅÔ∏è Detalle</a>
                    <a class="btn btn-warning btn-sm" asp-action="Editar" asp-route-id="@item.idContrato">‚úèÔ∏è Editar</a>
                    <button type="button" class="btn btn-danger btn-sm" onclick="confirmarEliminacion(@item.idContrato)">üóëÔ∏è Eliminar</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No hay contratos registrados a√∫n.
    </div>
}

@section Scripts {
    <script>
        function confirmarEliminacion(id) {
            Swal.fire({
                title: '¬øEst√°s seguro?',
                text: "Esta acci√≥n eliminar√° el contrato de la lista.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'S√≠, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Contrato/EliminarConfirmado/' + id;
                }
            });
        }
    </script>
}
