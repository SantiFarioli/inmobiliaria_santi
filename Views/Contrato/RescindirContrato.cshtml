@model inmobiliaria_santi.Models.Contrato

<h2>Rescindir Contrato</h2>

<form asp-action="RescindirContrato">
    <div class="form-group">
        <label for="multaTerminacionTemprana">Multa por Terminación Temprana</label>
        <input type="number" class="form-control" asp-for="multaTerminacionTemprana" readonly />
    </div>

    <div class="form-group">
        <label for="fechaTerminacionTemprana">Fecha de Terminación Temprana</label>
        <input type="date" class="form-control" asp-for="fechaTerminacionTemprana" readonly />
    </div>

    <div class="form-group">
        <label for="porcentajeMulta">Porcentaje de Multa</label>
        <input type="number" class="form-control" asp-for="porcentajeMulta" readonly />
    </div>

    <button type="submit" class="btn btn-danger">Confirmar Rescisión</button>
</form>
