@model inmobiliaria_santi.Models.Contrato

@{
    ViewData["Title"] = "Detalle del Contrato";
}

<div class="text-center mb-4">
    <h1>Detalle del Contrato</h1>
</div>

<div class="card mx-auto" style="max-width: 700px;">
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">Inquilino</label>
            <p>@Model.idInquilino</p>
        </div>

        <div class="mb-3">
            <label class="form-label">Inmueble</label>
            <p>@Model.idInmueble</p>
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha de Inicio</label>
            <p>@Model.fechaInicio.ToString("dd/MM/yyyy")</p>
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha de Fin</label>
            <p>@Model.fechaFin.ToString("dd/MM/yyyy")</p>
        </div>

        <div class="mb-3">
            <label class="form-label">Monto de Renta</label>
            <p>@Model.montoRenta.ToString("C")</p>
        </div>

        <div class="mb-3">
            <label class="form-label">Dep贸sito</label>
            <p>@Model.deposito</p>
        </div>

        <div class="mb-3">
            <label class="form-label">Comisi贸n</label>
            <p>@Model.comision</p>
        </div>

        <div class="mb-3">
            <label class="form-label">Condiciones</label>
            <p>@Model.condiciones</p>
        </div>

        <div class="mb-3">
            <label class="form-label">Multa por Terminaci贸n Temprana</label>
            <p>@Model.multaTerminacionTemprana?.ToString("C")</p> <!-- Aplica formato monetario -->
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha de Terminaci贸n Temprana</label>
            <p>@Model.fechaTerminacionTemprana?.ToString("dd/MM/yyyy")</p>
        </div>

        <!-- Bot贸n para rescindir contrato solo visible si el contrato est谩 activo -->
        @if (Model.estado)  
        {
            <div class="text-center mt-4">
                <a href="@Url.Action("RescindirContrato", "Contrato", new { id = Model.idContrato })" class="btn btn-danger">Rescindir Contrato</a>
            </div>
        }

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-secondary"> Volver al Listado</a>
        </div>
    </div>
</div>
