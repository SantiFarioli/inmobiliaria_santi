@model IEnumerable<inmobiliaria_santi.Models.Propietario>

@{
    ViewData["Title"] = "Listado de Propietarios";
    var esAdmin = User.IsInRole("Administrador");
}

<div class="text-center mb-4">
    <h1>Listado de Propietarios</h1>
    @if (esAdmin)
    {
        <a class="btn btn-success" asp-action="Crear">Crear Propietario</a>
    }
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>@nameof(inmobiliaria_santi.Models.Propietario.nombre)</th>
                <th>@nameof(inmobiliaria_santi.Models.Propietario.apellido)</th>
                <th>@nameof(inmobiliaria_santi.Models.Propietario.dni)</th>
                <th>@nameof(inmobiliaria_santi.Models.Propietario.telefono)</th>
                <th>@nameof(inmobiliaria_santi.Models.Propietario.email)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.nombre</td>
                <td>@item.apellido</td>
                <td>@item.dni</td>
                <td>@item.telefono</td>
                <td>@item.email</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Detalle" asp-route-id="@item.idPropietario">üëÅÔ∏è Detalle</a>
                    @if (esAdmin)
                    {
                        <a class="btn btn-warning btn-sm" asp-action="Editar" asp-route-id="@item.idPropietario">‚úèÔ∏è Editar</a>
                        <button type="button" class="btn btn-danger btn-sm" onclick="confirmarEliminacion(@item.idPropietario)">üóëÔ∏è Eliminar</button>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No hay propietarios registrados a√∫n.
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmarEliminacion(id) {
            Swal.fire({
                title: '¬øEst√°s seguro?',
                text: "Esta acci√≥n eliminar√° el propietario de la lista.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'S√≠, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Propietario/EliminarConfirmado/' + id;
                }
            });
        }
    </script>
}
