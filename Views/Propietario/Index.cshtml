@model IEnumerable<inmobiliaria_santi.Models.Propietario>

@{
    ViewData["Title"] = "Listado de Propietarios";
    var esAdmin = User.IsInRole("Administrador");
}

<div class="text-center mb-4">
    <h1>Listado de Propietarios</h1>
    @if (esAdmin)
    {
        <a class="btn btn-success" asp-action="Crear">Crear Propietario</a>
    }
</div>

<div class="d-flex justify-content-center mb-4">
    <form method="get" class="w-100" style="max-width: 600px;">
        <div class="mb-2">
            <input type="text" name="q" placeholder="Buscar por nombre, apellido, DNI o email..."
                   class="form-control text-center" value="@Context.Request.Query["q"]" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">
                üîç Buscar
            </button>
        </div>
    </form>
</div>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm border-primary h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.nombre @item.apellido</h5>
                        <p class="card-text">
                            <strong>DNI:</strong> @item.dni<br />
                            <strong>Tel√©fono:</strong> @item.telefono<br />
                            <strong>Email:</strong> @item.email
                        </p>
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-info btn-sm" asp-action="Detalle" asp-route-id="@item.idPropietario">üëÅÔ∏è Detalle</a>
                            @if (esAdmin)
                            {
                                <a class="btn btn-warning btn-sm" asp-action="Editar" asp-route-id="@item.idPropietario">‚úèÔ∏è Editar</a>
                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmarEliminacion(@item.idPropietario)">üóëÔ∏è</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        No hay propietarios registrados a√∫n.
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmarEliminacion(id) {
            Swal.fire({
                title: '¬øEst√°s seguro?',
                text: "Esta acci√≥n eliminar√° el propietario de la lista.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'S√≠, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Propietario/EliminarConfirmado/' + id;
                }
            });
        }
    </script>
}
