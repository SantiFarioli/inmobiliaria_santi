@model inmobiliaria_santi.Models.Usuario
@{
    ViewData["Title"] = "Alta de Usuario";
}

<h2 class="text-center my-4">Alta de Usuario</h2>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow p-4">
            <form asp-action="Alta" method="post" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label asp-for="nombre"></label>
                    <input asp-for="nombre" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="apellido"></label>
                    <input asp-for="apellido" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="email"></label>
                    <input asp-for="email" class="form-control" type="email" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="contrasena"></label>
                    <input asp-for="contrasena" class="form-control" type="password" required />
                </div>

                <div class="form-group mb-3">
                    <label for="rol">Rol</label>
                    <select asp-for="rol" class="form-select" required>
                        <option value="1">Administrador</option>
                        <option value="2">Empleado</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="AvatarFile">Avatar</label>
                    <input type="file" class="form-control" asp-for="AvatarFile" accept=".jpg,.jpeg,.png" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary ms-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
