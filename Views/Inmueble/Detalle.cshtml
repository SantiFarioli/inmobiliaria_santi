@model inmobiliaria_santi.Models.Inmueble

@{
    ViewData["Title"] = "Detalle del Inmueble";
}

<div class="text-center mb-4">
    <h1>Detalle del Inmueble</h1>
</div>

<div class="d-flex justify-content-center">
    <div class="card shadow-sm text-center" style="max-width: 600px; width: 100%;">
        <div class="card-body">
            <h5 class="mb-3 fw-bold">üìç @Model.direccion</h5>

            <p><strong>Tipo:</strong> @Model.TipoNombre</p>
            <p><strong>Uso:</strong> @Model.uso</p>
            <p><strong>Ambientes:</strong> @Model.cantAmbiente</p>
            <p><strong>Valor:</strong> @Model.valor.ToString("C")</p>
            <p>
                <strong>Disponible:</strong>
                @if (Model.disponible)
                {
                    <span class="badge bg-success">S√≠</span>
                }
                else
                {
                    <span class="badge bg-danger">No</span>
                }
            </p>
            <p><strong>Propietario:</strong> @Model.PropietarioNombre @Model.PropietarioApellido</p>
            <p><strong>DNI del Propietario:</strong> @Model.PropietarioDni</p>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-secondary">üîô Volver</a>
            </div>
        </div>
    </div>
</div>
