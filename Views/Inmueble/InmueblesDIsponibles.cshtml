@model IEnumerable<inmobiliaria_santi.Models.Inmueble>
@{
    ViewData["Title"] = "Inmuebles Disponibles";
}

<h2 class="text-center my-4">🏘️ Inmuebles Disponibles</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No hay inmuebles disponibles actualmente.
    </div>
}
else
{
    <div class="table-responsive mx-auto" style="max-width: 1200px;">
        <table class="table table-bordered table-hover table-striped shadow-sm align-middle text-center">
            <thead class="table-primary">
                <tr>
                    <th>📍 Dirección</th>
                    <th>🔧 Uso</th>
                    <th>🚪 Ambientes</th>
                    <th>💰 Valor</th>
                    <th>👤 Propietario</th>
                    <th>🏠 Tipo</th>
                    <th>⚙️ Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.direccion</td>
                        <td>@item.uso</td>
                        <td>@item.cantAmbiente</td>
                        <td>@item.valor.ToString("C")</td>
                        <td>@item.PropietarioNombre @item.PropietarioApellido</td>
                        <td>@item.TipoNombre</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Contrato" asp-action="Crear" asp-route-idInmueble="@item.idInmueble"
                                   class="btn btn-success btn-sm" title="Crear Contrato">
                                    📝
                                </a>
                                <a asp-action="Detalle" asp-route-id="@item.idInmueble"
                                   class="btn btn-info btn-sm" title="Ver Detalle">
                                    👁️
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="text-center mt-4">
    <a asp-controller="Contrato" asp-action="Index" class="btn btn-secondary">
        🔙 Volver al Listado de Contratos
    </a>
</div>
