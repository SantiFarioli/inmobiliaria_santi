@model IEnumerable<inmobiliaria_santi.Models.Inmueble>

@{
    ViewData["Title"] = "Listado de Inmuebles";
}

<div class="text-center mb-4">
    <h1>Listado de Inmuebles</h1>
    <a class="btn btn-success mt-3" asp-action="Crear">Crear Inmueble</a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>@nameof(inmobiliaria_santi.Models.Inmueble.direccion)</th>
                <th>@nameof(inmobiliaria_santi.Models.Inmueble.uso)</th>
                <th>@nameof(inmobiliaria_santi.Models.Inmueble.cantAmbiente)</th>
                <th>@nameof(inmobiliaria_santi.Models.Inmueble.valor)</th>
                <th>Disponible</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.direccion</td>
                <td>@item.uso</td>
                <td>@item.cantAmbiente</td>
                <td>$ @item.valor</td>
                <td>
                    @if (item.disponible)
                    {
                        <span class="badge bg-success">S√≠</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Detalle" asp-route-id="@item.idInmueble">üëÅÔ∏è Detalle</a>
                    <a class="btn btn-warning btn-sm" asp-action="Editar" asp-route-id="@item.idInmueble">‚úèÔ∏è Editar</a>
                    <button type="button" class="btn btn-danger btn-sm" onclick="confirmarEliminacion(@item.idInmueble)">üóëÔ∏è Eliminar</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No hay inmuebles registrados a√∫n.
    </div>
}

@section Scripts {
    <script>
        function confirmarEliminacion(id) {
            Swal.fire({
                title: '¬øEst√°s seguro?',
                text: "Esta acci√≥n eliminar√° el inmueble de la lista.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'S√≠, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Inmueble/EliminarConfirmado/' + id;
                }
            });
        }
    </script>
}
