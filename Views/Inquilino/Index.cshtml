@model IEnumerable<inmobiliaria_santi.Models.Inquilino>

@{
    ViewData["Title"] = "Listado de Inquilinos";
}

<div class="text-center mb-4">
    <h1>Listado de Inquilinos</h1>
    <a class="btn btn-success mt-3" asp-action="Crear">Crear Inquilino</a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>@nameof(inmobiliaria_santi.Models.Inquilino.nombre)</th>
                <th>@nameof(inmobiliaria_santi.Models.Inquilino.apellido)</th>
                <th>@nameof(inmobiliaria_santi.Models.Inquilino.dni)</th>
                <th>@nameof(inmobiliaria_santi.Models.Inquilino.telefono)</th>
                <th>@nameof(inmobiliaria_santi.Models.Inquilino.email)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.nombre</td>
                <td>@item.apellido</td>
                <td>@item.dni</td>
                <td>@item.telefono</td>
                <td>@item.email</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Detalle" asp-route-id="@item.idInquilino">üëÅÔ∏è Detalle</a>
                    <a class="btn btn-warning btn-sm" asp-action="Editar" asp-route-id="@item.idInquilino">‚úèÔ∏è Editar</a>
                    <button type="button" class="btn btn-danger btn-sm" onclick="confirmarEliminacion(@item.idInquilino)">üóëÔ∏è Eliminar</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No hay inquilinos registrados a√∫n.
    </div>
}

@section Scripts {
    <script>
        function confirmarEliminacion(id) {
            Swal.fire({
                title: '¬øEst√°s seguro?',
                text: "Esta acci√≥n eliminar√° el inquilino de la lista.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'S√≠, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Inquilino/EliminarConfirmado/' + id;
                }
            });
        }
    </script>
}
